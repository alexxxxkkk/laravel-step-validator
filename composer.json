{
    "name": "lexal/laravel-step-validator",
    "description": "Laravel & Lumen Step validator.",
    "license": "MIT",
    "authors": [
        {
            "name": "Alex Lex",
            "email": "allapkov@gmail.com"
        }
    ],
    "keywords": [
        "laravel",
        "lumen",
        "stepped-form",
        "step validator"
    ],
    "require": {
        "php": "^8.0",
        "illuminate/contracts": "^8.0",
        "illuminate/support": "^8.0",
        "lexal/stepped-form": "^1.1"
    },
    "require-dev": {
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7.1",
        "illuminate/http": "^8.0",
        "phpstan/phpstan": "^1.2",
        "phpunit/phpunit": "^9.5",
        "roave/security-advisories": "dev-latest",
        "webimpress/coding-standard": "^1.2"
    },
    "suggest": {
        "illuminate/validation": "Required to use step data validation on Before Handle Step event (^8.0)."
    },
    "autoload": {
        "psr-4": {
            "Lexal\\LaravelStepValidator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Lexal\\LaravelStepValidator\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Lexal\\LaravelStepValidator\\ServiceProvider\\ServiceProvider"
            ]
        }
    }
}
